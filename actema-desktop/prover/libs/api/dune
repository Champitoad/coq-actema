(library
 (name api)
 (public_name prover.api)
 (libraries atdgen))

(rule
 (targets logic_b.ml
          logic_b.mli)
 (deps    logic.atd)
 (action  (run atdgen -b %{deps})))

(rule
 (targets logic_t.ml
          logic_t.mli)
 (deps    logic.atd)
 (action  (run atdgen -t %{deps})))

(rule
 (targets fo_b.ml
          fo_b.mli)
 (deps    fo.atd)
 (action  (run atdgen -b %{deps})))

(rule
 (targets fo_t.ml
          fo_t.mli)
 (deps    fo.atd)
 (action  (run atdgen -t %{deps})))