(library
 (name actema_plugin)
 (public_name coq-actema.plugin)
 (synopsis "Actema plugin.")
 (flags :standard -rectypes -w -27) ; Coq requires the `-rectypes`
 (libraries coq-core.plugins.ltac sha cohttp-lwt-unix atdgen))

; Atdgen type definitions

(rule
 (targets fo_t.ml fo_t.mli)
 (deps fo.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets logic_t.ml logic_t.mli)
 (deps logic.atd)
 (action
  (run atdgen -t %{deps})))

; Atdgen biniou encoding/decoding

(rule
 (targets fo_b.ml fo_b.mli)
 (deps fo.atd)
 (action
  (run atdgen -t %{deps})))

(rule
 (targets logic_b.ml logic_b.mli)
 (deps logic.atd)
 (action
  (run atdgen -b %{deps})))

; This will let Dune know about Coq's .mlg grammar files.

(coq.pp
 (modules g_actema))
